{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "formatter": {
    "indentStyle": "space",
    "ignore": ["**/*.gen.ts", "**/*.vue", "./package.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noAssignInExpressions": "off",
        "noConfusingVoidType": "off",
        "noEmptyInterface": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noArguments": "off",
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "noParameterAssign": "off",
        "useShorthandFunctionType": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "useArrowFunction": "off",
        "noUselessEmptyExport": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "arrowParentheses": "always",
      "quoteStyle": "single"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
